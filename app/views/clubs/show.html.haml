.sports-wrapper.row
  %p
    %strong Club:
    ="#{@club.name}"
  %p
    %strong Country:
    ="#{@club.country}"
  %p
    %strong Established:
    ="#{@club.established}"

  %img{ src: "#{@club.image_link}", title: @club.description, style: "max-width: 640px" }

  %p.caption
    ="#{@club.description}"


  .text-center.edit-links
    = link_to "Back", sport_clubs_path(@club.sport)
