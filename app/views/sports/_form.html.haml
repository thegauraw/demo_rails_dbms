= form_for @sport do |f|
  - if @sport.errors.any?
    %div.error_msg
      %h3 #{pluralize(@sport.errors.count, 'errors')} errors occurred.
      %ul
        - @sport.errors.full_messages.each do |msg|
          %li #{msg}

  %p
    = f.label :title
    = f.text_field :title

  %p
    = f.label :description
    = f.text_area :description

  %p
    = f.submit
