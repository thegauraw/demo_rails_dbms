.form-wrapper{style: "width: 100%"}
  = form_for [@sport, @club, @player] do |f|
    - if @player.errors.any?
      .error_msg
        %h3 #{pluralize(@player.errors.count, 'errors')} errors occurred.
        %ul
          - @player.errors.full_messages.each do |msg|
            %li #{msg}
    .row
      .form-group
        = f.text_field :name, placeholder: 'Player\'s Name', class: 'input-lg form-control'
    .row
      .col-lg-6.form-group
        = f.text_field :country, placeholder: 'Country', class: 'input-lg form-control'
      .col-lg-6.form-group
        = f.text_field :position, placeholder: 'Position', class: 'input-lg form-control'
    .row
      .form-group.text-center
        = f.text_field :image_link, class: 'form-control', placeholder: "Image Link"
    .row
      .form-group
        = f.label :description
        = f.text_area :description, class: 'form-control', rows: 3
    .row
      .form-group.text-center
        = f.button :submit, class: 'btn-success'


